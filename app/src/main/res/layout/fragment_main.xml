<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:configChanges="keyboardHidden|orientation|screenSize"
        android:background="#ffffff"
        tools:context="com.infostructure.mybigbro.ui.fragments.MainFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/textViewPlaceholder0"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="right|bottom"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Have fun!"
            android:id="@+id/textViewMessageRunning2"
            android:textColor="#ff000000"
            android:background="@drawable/rounded_corners_ffad92d4"
            android:layout_row="10"
            android:layout_column="0"
            android:gravity="right" />

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Push play to get started!"
            android:id="@+id/textViewMessagePaused2"
            android:textColor="#ff000000"
            android:background="@drawable/rounded_corners_ff6bd456"
            android:layout_row="20"
            android:layout_column="0"
            android:layout_gravity="right"/>

        <ToggleButton
            style="@style/toggleButton"
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_toggle_bg"
            android:layout_row="30"
            android:layout_column="0" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Big Bro is running! It&apos;ll keep going, even when the app is closed. Push pause to stop."
            android:id="@+id/textViewMessageRunning1"
            android:textColor="#ff000000"
            android:background="@drawable/rounded_corners_ff7edd83"
            android:layout_row="40"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_width="250dp"
            android:gravity="left" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Big Bro uses your device&apos;s location to automatically capture and store images from nearby CCTV cameras."
            android:id="@+id/textViewMessagePaused1"
            android:textColor="#ff000000"
            android:background="@drawable/rounded_corners_ffd4a2cb"
            android:layout_row="50"
            android:layout_column="0"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/textViewPlaceholder1"
            android:layout_row="55"
            android:layout_column="0"
            android:layout_gravity="right|bottom"/>

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Placeholder."
            android:id="@+id/textViewMessageStatus"
            android:textColor="#ff000000"
            android:background="@drawable/rounded_corners_ff6bd456"
            android:layout_row="57"
            android:layout_column="0"
            android:gravity="right" />

        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Placeholder."
            android:id="@+id/textViewMessageRunningDeviceName"
            android:textColor="#ff000000"
            android:background="@drawable/rounded_corners_ffd4b384"
            android:layout_row="60"
            android:layout_column="0"
            android:layout_gravity="right"
            android:gravity="right"/>

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Placeholder."
            android:id="@+id/textViewMessagePausedDeviceName"
            android:textColor="#ff000000"
            android:background="@drawable/rounded_corners_ff66d4ae"
            android:layout_row="70"
            android:layout_column="0"
            android:layout_gravity="right"
            android:gravity="right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/textViewPlaceholder2"
            android:layout_row="75"
            android:layout_column="0"
            android:layout_gravity="right|bottom"/>

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Click here to find out more about My Big Bro..."
            android:id="@+id/textViewMessageAbout"
            android:textColor="#ff000000"
            android:background="@drawable/rounded_corners_ffad92d4"
            android:layout_row="80"
            android:layout_column="0"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/textViewPlaceholder3"
            android:layout_row="85"
            android:layout_column="0"
            android:layout_gravity="right|bottom"/>

    </GridLayout >

</ScrollView>
